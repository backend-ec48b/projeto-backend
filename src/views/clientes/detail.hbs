<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Detalhes do Cliente: {{cliente.nome}}</h2>

        <div>
            <a href="/clientes/{{cliente._id}}/editar" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            
            <form action="/clientes/{{cliente._id}}/deletar" method="POST" style="display: inline;" 
                  onsubmit="return confirm('Tem certeza que deseja deletar o cliente {{cliente.nome}} (CPF: {{cliente._id}})?');">
                <button type="submit" class="btn btn-danger">
                    <i></i> Excluir
                </button>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            Informações Principais
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">CPF:</dt>
                <dd class="col-sm-9 font-weight-bold">{{cliente._id}}</dd>

                <dt class="col-sm-3">Nome Completo:</dt>
                <dd class="col-sm-9">{{cliente.nome}}</dd>

                <dt class="col-sm-3">E-mail:</dt>
                <dd class="col-sm-9">{{cliente.email}}</dd>
            </dl>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            Endereço
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Logradouro:</dt>
                <dd class="col-sm-9">{{cliente.endereco.logradouro}}</dd>

                <dt class="col-sm-3">Rua:</dt>
                <dd class="col-sm-9">{{cliente.endereco.rua}}</dd>

                <dt class="col-sm-3">Cidade:</dt>
                <dd class="col-sm-9">{{cliente.endereco.cidade}}</dd>
            </dl>
        </div>
    </div>

    <a href="/clientes" class="btn btn-secondary mt-3">
        <i class="fas fa-arrow-left"></i> Voltar à Listagem
    </a>
</div>