<div class="container my-5">
    
    <h1 class="mb-4">{{#if item}}Editar Produto: {{item.nome}}{{else}}Criar Novo Produto{{/if}}</h1>
    
    {{#if error}}
        <div class="alert alert-danger" role="alert">
            Erro: {{error}}
        </div>
    {{/if}}

    <form method="POST" action="/produtos/{{#if item}}{{item.nome}}{{/if}}">

        <div class="form-group mb-3">
            <label for="nome">Nome do Produto:</label>
            <input 
                type="text" 
                class="form-control" 
                id="nome" 
                name="nome" 
                value="{{#if item}}{{item.nome}}{{else}}{{dadosAnteriores.nome}}{{/if}}"
                placeholder="Ex: Teclado Mecânico"
                required 
            >
        </div>

        <div class="form-group mb-4">
            <label for="preco">Preço (R$):</label>
            <input 
                type="number" 
                step="0.01"
                class="form-control" 
                id="preco" 
                name="preco" 
                value="{{#if item}}{{item.preco}}{{else}}{{dadosAnteriores.preco}}{{/if}}"
                placeholder="Ex: 150.99"
                required 
            >
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">
                {{#if item}}Atualizar Produto{{else}}Criar Produto{{/if}}
            </button>
            <a href="/produtos" class="btn btn-secondary">Cancelar e Voltar</a>
        </div>
        
    </form>
</div>