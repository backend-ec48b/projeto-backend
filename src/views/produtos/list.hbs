<div class="container my-5">
    
    <h1 class="mb-4">{{title}}</h1>
    
    <a href="/produtos/novo" class="btn btn-success mb-3">
        <i class="fas fa-plus-circle"></i> Novo Produto
    </a>

    {{#if produtos}}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each produtos}}
                        <tr>
                            <td>{{this.nome}}</td>
                            <td>R$ {{this.preco}}</td>
                            <td>
                                <a href="/produtos/{{this.nome}}" class="btn btn-sm btn-info text-white me-2">Detalhes</a>
                                <a href="/produtos/{{this.nome}}/editar" class="btn btn-sm btn-warning me-2">Editar</a>
                                
                                <form action="/produtos/{{this.nome}}/deletar" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja deletar o produto {{this.nome}}?');">
                                        Excluir
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <div class="alert alert-info">Nenhum produto cadastrado.</div>
    {{/if}}

</div>