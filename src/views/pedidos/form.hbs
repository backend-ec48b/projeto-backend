<div class="container my-5">
    
    <h1 class="mb-4">{{#if item}}Editar Pedido #{{item._id}}{{else}}Criar Novo Pedido{{/if}}</h1>
    
    {{#if error}}
        <div class="alert alert-danger" role="alert">
            Erro: {{error}}
        </div>
    {{/if}}

    <form method="POST" action="/pedidos/{{#if item}}{{item._id}}{{/if}}">

        <div class="form-group mb-3">
            <label for="notaFiscal">Nota Fiscal (ID):</label>
            <input 
                type="text" 
                class="form-control" 
                id="notaFiscal" 
                name="notaFiscal" 
                value="{{#if item}}{{item._id}}{{else}}{{dadosAnteriores.notaFiscal}}{{/if}}"
                required 
                {{#if item}}disabled readonly{{/if}} 
            >
            {{#if item}}
                <input type="hidden" name="notaFiscal" value="{{item._id}}">
            {{/if}}
        </div>

        <div class="form-group mb-3">
            <label for="clienteCpf">CPF do Cliente:</label>
            <input 
                type="text" 
                class="form-control" 
                id="clienteCpf" 
                name="clienteCpf" 
                value="{{#if item}}{{item.clienteCpf}}{{else}}{{dadosAnteriores.clienteCpf}}{{/if}}"
                placeholder="Ex: 123.456.789-00"
                required 
            >
        </div>

        <div class="form-group mb-4">
            <label for="produtosNome">Nomes dos Produtos (Separados por v√≠rgula):</label>
            <textarea 
                class="form-control" 
                id="produtosNome" 
                name="produtosNome" 
                rows="4" 
                placeholder="Ex: Produto A, Produto B, Produto C"
                required
            >{{#if item}}{{#each item.produtos}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}{{else}}{{dadosAnteriores.produtosNome}}{{/if}}</textarea>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">
                {{#if item}}Atualizar Pedido{{else}}Criar Pedido{{/if}}
            </button>
            <a href="/pedidos" class="btn btn-secondary">Cancelar e Voltar</a>
        </div>
        
    </form>
</div>